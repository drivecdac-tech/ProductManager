<Window x:Class="ANewReport.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:local="clr-namespace:ANewReport.Views"
        Title="Login" Height="250" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Username" />
        <TextBox Grid.Row="1" Margin="0,5,0,10" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Grid.Row="2" Text="Password" />
        <PasswordBox Grid.Row="3" Margin="0,5,0,15" x:Name="pwdBox" PasswordChanged="PasswordBox_PasswordChanged"/>
        <Button Grid.Row="4" Content="Login" Width="100" Height="30" HorizontalAlignment="Center" Command="{Binding LoginCommand}" IsDefault="True"/>
    </Grid>
</Window>
    