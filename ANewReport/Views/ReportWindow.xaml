<dx:DXWindow x:Class="ANewReport.Views.ReportWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" 
             xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/printing" 
             xmlns:local="clr-namespace:ANewReport.Views" 
             Title="ReportWindow" Height="450" Width="800">
    <DockPanel>
        <!-- 🔹 FILTER BAR (TOP) -->
        <Border DockPanel.Dock="Top" Background="#F5F5F5" Padding="10" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker x:Name="dpFrom" Width="130" SelectedDateChanged="DateChanged"/>
                <TextBlock Text="To:" Margin="15,0,5,0" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpTo" Width="130" SelectedDateChanged="DateChanged"/>
            </StackPanel>
        </Border>
        <dxp:DocumentPreviewControl x:Name="Preview"/>
    </DockPanel>
</dx:DXWindow>